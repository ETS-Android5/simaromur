<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grammatek.simaromur">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name="com.grammatek.simaromur.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app_logo"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <uses-library android:name="android.test.runner"
            android:required="false" />

        <service
            android:name="com.grammatek.simaromur.FliteTtsService"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.speech.tts"
                android:resource="@xml/tts_engine"
            />
        </service>

        <activity
            android:name="com.grammatek.simaromur.TTSManager"
            android:enabled="true"
            android:label="@string/simaromur_manager"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grammatek.simaromur.DownloadVoiceData"
            android:label="@string/simaromur_voice_manager"
            android:theme="@android:style/Theme.Holo"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.speech.tts.engine.INSTALL_TTS_DATA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grammatek.simaromur.CheckVoiceData"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.speech.tts.engine.CHECK_TTS_DATA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grammatek.simaromur.GetSampleText"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.speech.tts.engine.GET_SAMPLE_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".TtsSettingsActivity"
            android:targetActivity="com.grammatek.simaromur.TTSManager" />
        <activity-alias
            android:name=".EngineSettings"
            android:targetActivity="com.grammatek.simaromur.TTSManager" />

        <activity android:name="com.grammatek.simaromur.InfoViewer"
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="com.grammatek.simaromur.TTSDemo"
            android:configChanges="keyboardHidden|orientation" >
        </activity>

        <!-- Legacy Code for pre-ICS compatibility -->

        <activity
            android:name="com.grammatek.simaromur.Simaromur"
            android:enabled="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.START_TTS_ENGINE" />

                <category android:name="android.intent.category.tts_engine.FLITE" />
                <category android:name="android.intent.category.tts_lang.eng.USA" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.grammatek.simaromur.providers.SettingsProvider"
            android:authorities="com.grammatek.simaromur.providers.SettingsProvider"
        />
    </application>

</manifest>
